<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>JARVINO Wallet</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', sans-serif;
      background-color: #f4f6fa;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
    }

    .card {
      background: #fff;
      padding: 30px 40px;
      border-radius: 12px;
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
      text-align: center;
      width: 90%;
      max-width: 400px;
    }

    h2 {
      color: #1e90ff;
    }

    .balance {
      font-size: 24px;
      color: #333;
      margin: 20px 0;
    }

    .coin-logo {
      width: 30px;
      vertical-align: middle;
      margin-right: 8px;
    }

    .copy-btn {
      padding: 10px 20px;
      background-color: #1e90ff;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 16px;
    }

    .copy-btn:active {
      background-color: #0078cc;
    }

    .footer {
      font-size: 12px;
      margin-top: 25px;
      color: #888;
    }
  </style>
</head>
<body>

  <div class="card">
    <h2>üîê JARVINO Wallet</h2>
    <div class="balance" id="balanceDisplay">Loading...</div>
    <button class="copy-btn" onclick="copyBalance()">üìã Copy Balance</button>
    <div class="footer">Powered by Jarvino-BOT</div>
  </div>

  <script>
    const params = new URLSearchParams(window.location.search);
    const balance = params.get("bal");
    const coin = params.get("coin")?.toUpperCase() || "TON";
    const display = document.getElementById("balanceDisplay");

    if (balance && coin) {
      let logo = "";
      if (coin === "TON") logo = "https://cryptologos.cc/logos/toncoin-ton-logo.png?v=026";
      if (coin === "USDT") logo = "https://cryptologos.cc/logos/tether-usdt-logo.png?v=026";
      if (coin === "DOGS") logo = "https://cdn-icons-png.flaticon.com/512/616/616408.png";

      display.innerHTML = `
        <img src="${logo}" alt="${coin}" class="coin-logo">
        <strong>${balance}</strong> ${coin}
      `;
    } else {
      display.innerHTML = "‚ö†Ô∏è No balance info provided.";
    }

    function copyBalance() {
      navigator.clipboard.writeText(`${balance} ${coin}`).then(() => {
        alert("Balance copied!");
      });
    }
  </script>

</body>
</html>
